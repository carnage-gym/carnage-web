<div class="md:container mx-auto py-16">
  <% if notice.present? %>
    <p
      class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block"
      id="notice"
    ><%= notice %></p>
  <% end %>

  <% content_for :title, "Routines" %>

  <div class="text-center">
    <p class="text-white ml-4 font-bold font-montserrat uppercase text-3xl sm:text-7xl">Routines</p>
  </div>

  <div class="flex justify-center">
    <div class="w-[500px] mt-4 grid grid-flow-col justify-stretch gap-4">
      <%= link_to "New", new_routine_path, class: "btn btn-primary" %>
      <%= link_to "Discover", new_routine_path, class: "btn btn-secondary" %>
    </div>
  </div>
  <div class="divider"></div>
  <p class="text-primary font-montserrat md:text-4xl text-2xl font-extrabold mb-1">My routines</p>

  <div id="routines" class="mt-4 grid grid-cols-4 gap-4 min-w-full px-4">
    <%= render partial: "routines/routine", collection: @routines %>
  </div>
</div>
