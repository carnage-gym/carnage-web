<div id="<%= dom_id routine %>">
  <% if action_name != "show" %>
    <div class="flex justify-between">
      <p class="text-white font-bold text-lg"><%= routine.name %></p>
        <div class="flex gap-2">
          <%= link_to "edit", edit_routine_path(routine), class: "material-symbols-outlined hover:text-carnage-red" %>
          <%= button_to "delete", routine_path(routine), method: :delete, class: "material-symbols-outlined hover:text-carnage-red" %>
        </div>
      </div>
      <hr>

      <p class="ml-2 mt-1 text-zinc-900"><%= routine.description %></p>

  <% end %>
</div>
