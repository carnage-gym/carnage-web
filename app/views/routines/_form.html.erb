<%= form_with(model: routine, class: "contents relative") do |form| %>
    <div class="flex gap-8 align-items-left py-16 pl-16">


        <div class="w-full">
        <% if routine.errors.any? %>
            <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
            <h2><%= pluralize(routine.errors.count, "error") %> prohibited this routine from being saved:</h2>
            <ul>
                <% routine.errors.each do |error| %>
                <li><%= error.full_message %></li>
                <% end %>
            </ul>
            </div>
        <% end %>

            <div class="grid w-full">
                    <%= form.text_field :name, placeholder: "Routine title...", class: "border-none bg-carnage-secondary rounded-lg text-white text-4xl mb-4" %>
                    <%= form.text_field :description, placeholder: "Workout description...", class: "border-none bg-carnage-secondary rounded-lg text-white mb-4" %>
            </div>

            <div class="bg-carnage-secondary p-4">

            </div>

            <div data-controller="routines" class="flex justify-center gap-4">
                <%= render DialogComponent.new(title: "test", close_button_text: "save") do %>
                  <% for ex in Exercise.all %>
                    <%= render ex, is_workout: false do %>
                        <%= button_to "+", routine_add_exercise_path(exercise_id: ex.id, routine_id: routine.id) , method: :patch %>
                    <% end %>
                  <% end %>
                <% end %>

                <button type="button" data-action="click->routines#show" class="w-auto rounded-3xl py-2 px-8 bg-carnage-red text-white font-medium cursor-pointer">Add stuff</button>
                <%= form.submit "Save Changes", class: "w-auto rounded-3xl py-2 px-8 bg-carnage-red text-white font-medium cursor-pointer" %>
            </div>

            </div>
    </div>
<% end %>
