<%= turbo_stream.append :exercises do %>
  <%= turbo_frame_tag dom_id(@exercise, :edit) do %>
    <%= render @exercise, routine_id: @routine.id  do |p| %>
      <% p.body do %>
        <%= link_to "x", routine_remove_exercise_path(routine_id: @routine.id, exercise_id: @exercise.id), data: { turbo_method: :post }, class: "font-semibold" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= turbo_stream.remove dom_id(@exercise, :view) %>