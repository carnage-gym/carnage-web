<div class="max-w-[40rem] mx-auto min-h-[36rem] p-20 rounded-xl border-gray-200 border-2">
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul class="flex flex-col bg-red-400/80 p-4 text-white font-semibold rounded-xl grow">
        <% @user.errors.each do |error| %>
          <li>â€¢ <%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>
  <p class="text-8xl text-center font-extrabold my-4">Sign up.</p>
  <%= form_with url: registrations_path, data: {turbo: false}, class: "flex flex-col gap-2" do |form| %>
    <%= form.email_field :email_address, required: true, autocomplete: "email", placeholder: "Email Address", value: params[:email_address], class: "outline outline-gray-200 focus:outline-black p-2 rounded-xl" %><br>
    <%= form.text_field :username, required: true, autofocus: true, autocomplete: "username", placeholder: "Username", value: params[:username], class: "p-2 rounded-xl outline outline-gray-200 focus:outline-black" %><br>
    <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Password", maxlength: 72, class: "p-2 rounded-xl outline outline-gray-200 focus:outline-black" %><br>
    <%= form.password_field :password_confirmation, required: true, autocomplete: "current-password", placeholder: "Confirm Password", maxlength: 72, class: "p-2 rounded-xl outline outline-gray-200 focus:outline-black" %><br>
    <%= form.submit "Sign up", class: "px-4 py-1 bg-emerald-500 text-white font-semibold rounded-full transition ease-in-out hover:bg-emerald-500/75" %>
  <% end %>
  <br>
  <%= link_to "Forgot password?", new_password_path %>
</div>
