<div class="max-w-[40rem] mx-auto">
  <% if flash[:alert] %> <!-- TODO: turn this into a component/partial -->
    <p class="bg-red-400/80 p-4 text-white font-semibold rounded-xl flex grow"><%= flash[:alert] %></p>
  <% end %>
  <%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>
  <p class="text-8xl text-center font-extrabold my-4">Sign up.</p>
  <%= form_with url: registrations_path, class: "flex flex-col" do |form| %>
    <%= form.email_field :email_address, required: :true, autocomplete: "email", placeholder: "Email Address", value: params[:email_address] %><br>
    <%= form.text_field :username, required: true, autofocus: true, autocomplete: "username", placeholder: "Username", value: params[:username] %><br>
    <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Password", maxlength: 72 %><br>
    <%= form.password_field :password_confirmation, required: true, autocomplete: "current-password", placeholder: "Confirm Password", maxlength: 72 %><br>
    <%= form.submit "Sign up", class: "px-4 py-1 bg-black text-white font-semibold rounded-full transition ease-in-out hover:bg-black/75" %>
  <% end %>
  <br>
  <%= link_to "Forgot password?", new_password_path %>
</div>