<div class="max-w-[40rem] min-h-[36rem] mx-auto p-20 border-gray-200 rounded-xl border-2">
  <% if flash[:alert] %> <!-- TODO: turn this into a component/partial -->
    <p class="bg-red-400/80 outline outline-2 outline-red-300 p-2 text-white font-semibold rounded-xl"><%= flash[:alert] %></p>
  <% end %>
  <%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>
  <p class="text-8xl text-center font-extrabold my-4">Sign in.</p>
  <%= form_with url: session_path, class: "flex flex-col gap-2" do |form| %>
    <%= form.text_field :username, required: true, autofocus: true, autocomplete: "username", placeholder: "Username", value: params[:username], class: "p-2 rounded-xl outline outline-gray-200 focus:outline-black" %><br>
    <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "p-2 rounded-xl outline outline-gray-200 focus:outline-black" %><br>
    <%= form.submit "Sign in", class: "px-4 py-1 bg-emerald-500 text-white font-semibold rounded-full transition ease-in-out hover:bg-emerald-500/75" %>
  <% end %>
  <br>
  <%= link_to "Forgot password?", new_password_path %>
  <%= link_to " â€¢ Don't have an account?", new_registration_path %>
</div>
