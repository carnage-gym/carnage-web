<div class="flex p-2 gap-4 items-center outline outline-b outline-gray-200 mb-4">
  <%= link_to "Home", root_path, class: "text-gray-800 hover:text-gray-800/75" %>
  <% if authenticated? %>
    <%= link_to "Routines", root_path, class: "text-gray-800 hover:text-gray-800/75" %>
    <%= link_to "Profile", users_path(id: current_user.id), class: "text-gray-800 hover:text-gray-800/75" %>
    <%= link_to "Feed", root_path, class: "text-gray-800 hover:text-gray-800/75" %>
  <% end %>
  <div class="flex w-full justify-end gap-4">
    <% if authenticated? %>
      <%= button_to "Sign Out", session_path, method: :delete, class: "py-1 px-2 bg-red-500 text-white transition ease-in-out hover:bg-red-500/75 rounded-xl" %>
    <% else %>
      <%= link_to "Sign in", new_session_path, class: "py-1 px-2 bg-emerald-500 text-white transition ease-in-out hover:bg-emerald-500/75 rounded-xl" %>
    <% end %>
  </div>
</div>
