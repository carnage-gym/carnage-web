<%= turbo_frame_tag dom_id(@set, :edit) do %>
  <%= form_with model: @set, url: exercise_exercise_set_path(exercise_id: @set.exercise.id, set_id: @set.id),
    data: { turbo_frame: dom_id(@set, :edit) },
    class: "flex justify-around" do |form| %>
    
    <div class="flex gap-6 items-center text-sm">
      <div>
        <i class="fa fa-skull mr-2"></i>
        <%= form.number_field :intensity, in: 0..10, class: "w-16 bg-carnage-main rounded-3xl" %>
      </div>
      <div>
        <i class="fa fa-dumbbell mr-2"></i>
        <%= form.number_field :weight, class: "w-16 bg-carnage-main rounded-3xl" %>
      </div>

      <div>
        <i class="fa fa-check mr-2"></i>
        <%= form.number_field :reps, class: "w-16 bg-carnage-main rounded-3xl" %>
      </div>
    </div>
  
    
    <%= form.submit "âœ“", class: "fa fa-check hover:text-carnage-red-pressed" %>
  <% end %>
<% end %>
