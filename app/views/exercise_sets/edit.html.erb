<%= turbo_frame_tag dom_id(@set, :edit) do %>
  <%= form_with model: @set, url: exercise_exercise_set_path(exercise_id: @set.exercise.id, set_id: @set.id),
    data: { turbo_frame: dom_id(@set, :edit) },
    class: "flex flex-row justify-around" do |form| %>
    <%= form.number_field :intensity, in: 0..10 %>
    <%= form.number_field :weight %>
    <%= form.number_field :reps %>
    <%= form.submit "Save changes", class: "p-1 bg-red-500 rounded-lg text-sm font-bold text-slate-100" %>
  <% end %>
<% end %>
