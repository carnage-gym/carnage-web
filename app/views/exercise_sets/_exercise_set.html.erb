<%= turbo_frame_tag dom_id(exercise_set, :edit), class: "contents" do %>
  <div class="flex flex-row justify-evenly md:justify-around items-center text-sm">
    <div class="flex gap-2 items-center">
      <i class="fa fa-skull"></i>
      <p><%= exercise_set.intensity %></p>
    </div>

    <div class="flex gap-2 items-center">
      <i class="fa fa-dumbbell"></i>
      <p><%= exercise_set.weight %></p>
    </div>
    
    <div class="flex gap-2 items-center">
      <i class="fa fa-check"></i>
      <p><%= exercise_set.reps %></p>
    </div>    
    
    <div class="flex gap-4 p-2 rounded-xl">
      <%= link_to "Edit", edit_exercise_exercise_set_path(id: exercise_set.id, exercise_id: exercise_set.exercise.id), class: "p-2 outline outline-4 outline-teal-400 text-teal-400 hover:text-teal-300 font-bold rounded-xl text-sm" %>
      <%= button_to "- Remove", exercise_exercise_set_path(id: exercise_set.id, exercise_id: exercise_set.exercise.id), method: :delete, class: "text-sm p-2 outline outline-4 outline-red-400 text-red-400 hover:text-red-300 rounded-xl font-bold" %>
    </div>
  </div>
<% end %>
