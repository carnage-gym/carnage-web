<%= turbo_frame_tag dom_id(exercise_set, :edit), class: "" do %>
  <div class="flex flex-row justify-evenly md:justify-around items-center text-sm md:text-md">
    <div class="flex gap-2 items-center">
      <i class="fa fa-skull"></i>
      <p><%= exercise_set.intensity %></p>
    </div>

    <div class="flex gap-2 items-center">
      <i class="fa fa-dumbbell"></i>
      <p><%= exercise_set.weight %></p>
    </div>

    <div class="flex gap-2 items-center">
      <i class="fa fa-check"></i>
      <p><%= exercise_set.reps %></p>
    </div>

    <div class="flex gap-4 p-2 rounded-xl items-center">
      <%= link_to "Edit",
      edit_exercise_exercise_set_path(id: exercise_set.id, exercise_id: exercise_set.exercise.id),
      class:
        "rounded-3xl font-semibold hover:bg-carnage-red-pressed transition ease-in-out py-2 px-8 
                    text-center text-white bg-carnage-red text-sm" %>
      <%= button_to "X",
      exercise_exercise_set_path(id: exercise_set.id, exercise_id: exercise_set.exercise.id),
      method: :delete,
      class:
        "rounded-3xl font-semibold transition ease-in-out 
                      text-center text-white hover:text-carnage-red-pressed" %>
    </div>
  </div>
<% end %>
