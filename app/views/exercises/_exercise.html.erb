<%= turbo_frame_tag dom_id(exercise, :edit) do %>
  <%= render ExerciseViewComponent.new(exercise: exercise) do %>
    <% if exercise.exerciseType == Exercise::WEIGHT_REPS %>
      <%= turbo_frame_tag dom_id(exercise, "sets") do %>
        <% ExerciseSet.where(workout_id: @workout.id, exercise_id: exercise.id).each do |x| %>
          <%= render x %>
        <% end %>
      <% end %>
      <div class="gap-4 mt-3 w-full flex justify-center">
        <%= button_to "Add set", exercise_exercise_sets_path(exercise_id: exercise.id, workout_id: @workout.id), class: "outline hover:text-teal-300 outline-400 outline-teal-400 text-teal-400 rounded-xl p-2 font-bold text-sm" %>
        <%= button_to "Remove Exercise", workout_remove_exercise_path(exercise_id: exercise.id, workout_id: @workout.id), method: :delete, class: "text-sm rounded-xl hover:text-red-300 outline outline-red-400 text-red-400 font-bold p-2" %> 
      </div>
    <% end %>
  <% end %>
<% end %>