<div class="md:container">
  <div class="mx-auto max-h-[48rem] rounded-lg p-3 overflow-auto">
    <div class="flex justify-between">
      <p class="text-4xl mb-2 text-white font-extrabold">Exercises</p>
      <%= link_to "Test", new_exercise_path, class: "outline hover:text-teal-300 outline-400 outline-teal-400 text-teal-400 rounded-xl p-2 font-bold text-sm" %>
    </div>
    <div class="ml-2">
      <% @exercises.each do |ex| %>
        <%= render ex, is_workout: false do |b| %>
          <div class="flex justify-center gap-3">
            <%= link_to "Edit Exercise", edit_exercise_path(ex.id), class: "outline hover:text-teal-300 outline-400 outline-teal-400 text-teal-400 rounded-xl p-2 font-bold text-sm" %>
            <% if current_user.id == ex.user_id %>
              <%= button_to "Remove Exercise", exercise_path(ex.id), method: :delete, class: "outline hover:text-red-300 outline-400 outline-red-400 text-red-400 rounded-xl p-2 font-bold text-sm" %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
