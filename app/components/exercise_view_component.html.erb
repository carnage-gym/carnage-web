<div id="exercise" class="bg-slate-100 text-gray-700 mb-2 p-1 rounded-lg"> 
  <div class="flex justify-between">    <!--Image in the future-->
    <p class="font-bold text-md"><%= @title %></p>
  </div>
  <% @muscleGroup.each do |mg| %>
    <p class="ml-2 text-sm inline"><%= mg.name %></p>
  <% end %>

  <% if @emphasis.presence %>
    <p class="ml-2 text-sm"> (<%= @emphasis %>)</p>
  <% end %>

  <div class="flex gap-2 mt-2 ml-2">
    <%= link_to "Edit Exercise", "", class: "bg-red-400 hover:bg-red-500 text-slate-100 text-sm p-1 rounded-lg" %>
  </div>
</div>
